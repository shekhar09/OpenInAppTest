<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.shekhar.kotlin.ui.link.LinkFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/background"
                android:id="@+id/layout_header"
                android:paddingTop="24dp"
                android:paddingHorizontal="16dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard"
                        android:layout_centerVertical="true"
                        android:textSize="24sp"
                        android:lineSpacingExtra="-5sp"
                        android:lineHeight="24sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/figtree_medium"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/iv_setting"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_settings"
                        />


                </RelativeLayout>


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_below="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/background_2"

                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:text="Good Morning"
                        android:textSize="16sp"
                        android:lineSpacingExtra="5sp"
                        android:lineHeight="24sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/figtree_medium"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:layout_marginTop="8dp">


                        <TextView
                            android:id="@+id/ajay_manva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:lineHeight="32sp"
                            android:textColor="@color/black"
                            android:text="Kunwar Shekhar Singh"
                            android:lineSpacingExtra="3sp"
                            android:fontFamily="@font/figtree_medium"
                            android:layout_marginEnd="8dp"
                            />


                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_hello"
                            />


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:layout_marginTop="24dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/white">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/overview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:lineHeight="20sp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/grey"
                                    android:text="@string/overview"
                                    android:lineSpacingExtra="3sp"
                                    android:fontFamily="@font/figtree_regular"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/bg_rounded"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="6dp"
                                    >


                                    <TextView
                                        android:id="@+id/tv_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:lineHeight="12sp"
                                        android:textColor="@color/black"
                                        android:text="22 Aug - 23 Sept"
                                        android:lineSpacingExtra="-2sp"
                                        android:fontFamily="@font/figtree_medium"
                                        android:layout_marginEnd="4dp"
                                        />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_time"
                                        android:layout_gravity="center_vertical"
                                        />


                                </LinearLayout>


                            </RelativeLayout>

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginBottom="16dp"/>


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="24dp"
                        android:fillViewport="true"
                        android:paddingStart="16dp"
                        android:scrollbars="none"
                        android:clipToPadding="false">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_marginEnd="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_clicks"
                                        />


                                    <TextView
                                        android:id="@+id/tv_clicks"
                                        android:layout_marginTop="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:lineHeight="12sp"
                                        android:textColor="@color/black"
                                        android:text="-"
                                        android:lineSpacingExtra="-2sp"
                                        android:fontFamily="@font/figtree_bold"

                                        />

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="@color/grey"
                                        android:text="@string/today_clicks"
                                        android:fontFamily="@font/figtree_medium"

                                        />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_location"
                                        />


                                    <TextView
                                        android:id="@+id/tv_location"
                                        android:layout_marginTop="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:lineHeight="12sp"
                                        android:textColor="@color/black"
                                        android:text="-"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:lineSpacingExtra="-2sp"
                                        android:fontFamily="@font/figtree_bold"

                                        />

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#999CA0"
                                        android:text="@string/top_location"
                                        android:fontFamily="@font/figtree_medium"

                                        />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_source"
                                        />


                                    <TextView
                                        android:id="@+id/tv_source"
                                        android:layout_marginTop="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:lineHeight="12sp"
                                        android:textColor="@color/black"
                                        android:text="-"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:maxLength="10"
                                        android:lineSpacingExtra="-2sp"
                                        android:fontFamily="@font/figtree_bold"

                                        />

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="@color/grey"
                                        android:text="@string/top_source"
                                        android:fontFamily="@font/figtree_medium"

                                        />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_clicks"
                                        />


                                    <TextView
                                        android:id="@+id/tv_time"
                                        android:layout_marginTop="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:lineHeight="12sp"
                                        android:textColor="@color/black"
                                        android:text="-"
                                        android:lineSpacingExtra="-2sp"
                                        android:fontFamily="@font/figtree_bold"

                                        />

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="@color/grey"
                                        android:text="@string/best_time"
                                        android:fontFamily="@font/figtree_medium"

                                        />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>



                        </LinearLayout>


                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/layout_view_analytics"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_border"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp">



                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_analytics"
                            android:layout_gravity="center_vertical"
                            />


                        <TextView
                            android:id="@+id/tv_view_analytics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:lineHeight="12sp"
                            android:textColor="@color/black"
                            android:text="@string/view_analytics"
                            android:lineSpacingExtra="-2sp"
                            android:fontFamily="@font/figtree_medium"
                            android:layout_marginStart="4dp"
                            />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="18dp">


                        <TextView
                            android:id="@+id/tv_top_links"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:lineHeight="32sp"
                            android:textColor="@color/white"
                            android:text="@string/top_links"
                            android:lineSpacingExtra="3sp"
                            android:fontFamily="@font/figtree_bold"
                            android:layout_marginEnd="8dp"
                            android:layout_centerVertical="true"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/bg_rounded_blue"
                            />


                        <TextView
                            android:id="@+id/tv_recent_links"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_top_links"
                            android:textSize="16sp"
                            android:lineHeight="32sp"
                            android:textColor="@color/grey"
                            android:text="@string/recent_links"
                            android:lineSpacingExtra="5sp"
                            android:fontFamily="@font/figtree_bold"
                            android:layout_marginEnd="8dp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="16dp"
                            android:layout_centerVertical="true"
                            />


                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:id="@+id/iv_search"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_search"
                            android:layout_centerVertical="true"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginHorizontal="16dp"
                            >

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:id="@+id/recycler_top_data"
                                tools:listitem="@layout/item_data"
                                tools:itemCount="4"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:id="@+id/recycler_recent_data"
                                tools:listitem="@layout/item_data"
                                tools:itemCount="4"
                                />


                        </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_view_all_link"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/bg_rounded_border"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp">



                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_link"
                            android:padding="4dp"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/black" />


                        <TextView
                            android:id="@+id/tv_view_all_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:lineHeight="12sp"
                            android:textColor="@color/black"
                            android:text="@string/view_all_links"
                            android:lineSpacingExtra="-2sp"
                            android:fontFamily="@font/figtree_medium"
                            android:layout_marginStart="4dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_whatsapp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp">



                        <ImageView
                            android:layout_marginStart="4dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_whatsapp"
                            android:layout_gravity="center_vertical"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:lineHeight="12sp"
                            android:textColor="#000000"
                            android:text="@string/talk_with_us"
                            android:lineSpacingExtra="-2sp"
                            android:fontFamily="@font/figtree_medium"
                            android:layout_marginStart="8dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_faq"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="100dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_faq"
                        android:layout_marginHorizontal="16dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp">



                        <ImageView
                            android:layout_marginStart="4dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_faq"
                            android:layout_gravity="center_vertical"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:lineHeight="12sp"
                            android:textColor="#000000"
                            android:text="@string/frequently_asked_questions"
                            android:lineSpacingExtra="-2sp"
                            android:fontFamily="@font/figtree_medium"
                            android:layout_marginStart="8dp"
                            />


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>






</FrameLayout>